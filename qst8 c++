#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    char escala;
    double temp, convertido;

    cout << "Voce vai digitar a temperatura em qual escala (C/F)? ";
    cin >> escala;

    cout << fixed << setprecision(2);

    if (escala == 'C' || escala == 'c') {
        cout << "Digite a temperatura em Celsius: ";
        cin >> temp;
        convertido = (9.0 * temp / 5.0) + 32.0;
        cout << "Temperatura equivalente em Fahrenheit: " << converted << endl;
    } 
    else {
        cout << "Digite a temperatura em Fahrenheit: ";
        cin >> temp;
        convertido = 5.0 * (temp - 32.0) / 9.0;
        cout << "Temperatura equivalente em Celsius: " << converted << endl;
    }

    return 0;
}
